@model Edu_DB_ASP.Models.Learner

@{
	ViewData["Title"] = "Learner Profile";
}

<style>
	body {
		margin: 0;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background: #11111B;
		/* base */
		color: #D9E0EE;
		/* text */
	}

	.section-container {
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0 1rem;
	}

	h1 {
		color: #cba6f7;
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}

	table {
		width: 100%;
		border-collapse: collapse;
		background: #181825;
		border-radius: 15px;
		overflow: hidden;
	}

	table thead {
		background: #313244;
	}

	table thead th {
		text-align: left;
		padding: 1rem;
		color: #cdd6f4;
		font-weight: 600;
		border-bottom: 1px solid #45475a;
	}

	table tbody tr {
		border-bottom: 1px solid #313244;
	}

	table tbody tr:hover {
		background: #1e1e2e;
	}

	table tbody td {
		padding: 1rem;
		color: #a6adc8;
	}

	.back-to-index {
		display: flex;
		justify-content: center;
		margin-top: 2rem;
	}

	.back-to-index button,
	.btn-primary,
	.btn-secondary,
	.btn-tertiary {
		background-color: #89b4fa;
		color: #1e1e2e;
		border: none;
		padding: 0.75rem 1.5rem;
		font-size: 1rem;
		font-weight: 600;
		cursor: pointer;
		border-radius: 15px;
		transition: background-color 0.3s ease;
		text-decoration: none;
		/* Remove underline from links */
	}

	.btn-secondary {
		background-color: #A6E3A1;
	}

	.btn-tertiary {
		background-color: #fab387;
	}

	.back-to-index button:hover,
	.btn-primary:hover,
	.btn-secondary:hover,
	.btn-tertiary:hover {
		background-color: #74c7ec;
	}
</style>

<div class="section-container">
	<h1>Profile</h1>

	<table class="table">
		<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.FirstName)</th>
			<th>@Html.DisplayNameFor(model => model.LastName)</th>
			<th>@Html.DisplayNameFor(model => model.Gender)</th>
			<th>@Html.DisplayNameFor(model => model.CountryOfOrigin)</th>
			<th>@Html.DisplayNameFor(model => model.Email)</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td>@Html.DisplayFor(model => model.FirstName)</td>
			<td>@Html.DisplayFor(model => model.LastName)</td>
			<td>@Html.DisplayFor(model => model.Gender)</td>
			<td>@Html.DisplayFor(model => model.CountryOfOrigin)</td>
			<td>@Html.DisplayFor(model => model.Email)</td>
			
			<td>
				<a asp-action="Edit" asp-route-id="@Model.LearnerId" class="btn-primary">Edit</a> |
				<a asp-action="Delete" asp-route-id="@Model.LearnerId" class="btn-tertiary">Delete</a>
			</td>
		</tr>
		</tbody>
	</table>

	<div class="back-to-index">
		<a asp-action="Index" asp-controller="PersonalizationProfiles">
			<button>Go to Your Personalization Details</button>
		</a>
	</div>
</div>