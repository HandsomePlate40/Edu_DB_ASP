@model LearningGoal

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Goal</title>
    <style>
        /* Reuse CSS from Notifications page */
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #11111B; /* base */
            color: #D9E0EE; /* text */
        }

        .form-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: #181825; /* mantle */
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #cdd6f4; /* text color */
        }

        .form-input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #4c566a; /* Border color */
            border-radius: 5px;
            background-color: #3b4252; /* Dark input background */
            color: #cdd6f4; /* text color */
        }

        .form-button {
            width: 100%;
            padding: 0.75rem;
            background-color: #89B4FAFF; /* Accent button color */
            color: #2e3440; /* Dark text color */
            border: none;
            border-radius: 5px;
            font-size: 1em;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-button:hover {
            background-color: #3e89ff; /* Slightly darker accent color */
        }
    </style>
</head>
<body>
<div class="form-container">
    <form asp-action="AddGoal" method="post">
        <div class="form-group">
            <label asp-for="GoalId" class="form-label"></label>
            <input asp-for="GoalId" class="form-input" />
        </div>
        <div class="form-group">
            <label asp-for="ObjectiveType" class="form-label"></label>
            <input asp-for="ObjectiveType" class="form-input"/>
        </div>
        <div class="form-group">
            <label asp-for="ProgressStatus" class="form-label"></label>
            <input asp-for="ProgressStatus" class="form-input"/>
        </div>
        <div class="form-group">
            <label asp-for="GoalDescription" class="form-label"></label>
            <input asp-for="GoalDescription" class="form-input"/>
        </div>
        <div class="form-group">
            <label asp-for="TimeBound" class="form-label"></label>
            <input asp-for="TimeBound" type="date" class="form-input"/>
        </div>
        <button type="submit" class="form-button">Add Goal</button>
    </form>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="form-error">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}
</body>
</html>