@model IEnumerable<QuestProgressViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quest Progress</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #11111B;
            color: #D9E0EE;
        }
        .section-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        h2 {
            color: #cba6f7;
            border-bottom: 2px solid #45475a;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: #181825;
            border-radius: 15px;
            overflow: hidden;
        }
        table thead {
            background: #313244;
        }
        table thead th {
            text-align: left;
            padding: 1rem;
            color: #cdd6f4;
            font-weight: 600;
            border-bottom: 1px solid #45475a;
        }
        table tbody tr {
            border-bottom: 1px solid #313244;
        }
        table tbody tr:hover {
            background: #1e1e2e;
        }
        table tbody td {
            padding: 1rem;
            color: #a6adc8;
        }
    </style>
</head>
<body>
<div class="section-container">
    <h2>Quest Progress</h2>
    <table>
        <thead>
        <tr>
            <th>Quest ID</th>
            <th>Quest Title</th>
            <th>Quest Description</th>
            <th>Quest Status</th>
            <th>Badge ID</th>
            <th>Badge Title</th>
            <th>Badge Description</th>
            <th>Badge Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.QuestID</td>
                <td>@item.QuestTitle</td>
                <td>@item.QuestDescription</td>
                <td>@item.QuestStatus</td>
                <td>@item.BadgeID</td>
                <td>@item.BadgeTitle</td>
                <td>@item.BadgeDescription</td>
                <td>@item.BadgeStatus</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>