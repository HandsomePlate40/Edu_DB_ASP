@{
    ViewData["Title"] = "Welcome to 5 Bytes";
}

<section class="hero">
    <div class="hero-content text-center">
        <h1 class="hero-title">Welcome to 5 Bytes!</h1>
        <p class="hero-subtitle">Your gateway to a world of knowledge and learning.</p>
        <a class="btn-primary" asp-controller="Course" asp-action="Course">Browse Courses</a>
    </div>
</section>

<section class="features">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="feature-icon fas fa-laptop-code" style="color: var(--green);"></i>
                    <h2 class="feature-title">Interactive Learning</h2>
                    <p class="feature-description">Engage with interactive content and hands-on activities.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="feature-icon fas fa-chalkboard-teacher" style="color: var(--yellow);"></i>
                    <h2 class="feature-title">Expert Instructors</h2>
                    <p class="feature-description">Learn from industry experts and experienced educators.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="feature-icon far fa-calendar-alt" style="color: var(--peach);"></i>
                    <h2 class="feature-title">Flexible Schedule</h2>
                    <p class="feature-description">Study at your own pace with flexible course schedules.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --background-color: #11111b; /* Catppuccin Mocha background */
    }

    body {
        background-color: #11111B;
        color: var(--text);
        font-family: 'Roboto', sans-serif;
    }

    .hero {
        background: url("https://4kwallpapers.com/images/walls/thumbs_3t/19118.png") no-repeat center center; /* Replace 'your-image-file.jpg' with the actual file name */
        background-size: cover;
        padding: 4rem 2rem;
        margin-bottom: 2rem;
        color: #efdede;
        border-radius: 24px;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #ffffff;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: var(--flamingo);
        margin-bottom: 2rem;
    }

    .btn-primary {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: var(--mauve);
        color: var(--text);
        border: none;
        border-radius: 24px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: var(--maroon);
        color: var(--text)
    }

    .features {
        padding: 2rem 0;
    }

    .feature-card {
        background-color: var(--surface0);
        padding: 2rem;
        margin-bottom: 1rem;
        border-radius: 24px;
        text-align: center;
        transition: transform 0.3s;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: var(--sky);
    }

    .feature-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--text);
    }

    .feature-description {
        font-size: 1.1rem;
        color: var(--subtext0);
    }
</style>