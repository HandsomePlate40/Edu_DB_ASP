@model Edu_DB_ASP.Models.DiscussionForum

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add Discussion</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #11111B;
            color: #D9E0EE;
        }

        .form-container {
            background-color: #181825;
            border-radius: 25px;
            padding: 2rem;
            width: 50%;
            margin: 2rem auto;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #cba6f7;
            font-weight: 500;
        }

        input[type="text"],
        input[type="number"],
        textarea {
            width: calc(100% - 1rem);
            padding: 0.5rem;
            border: 1px solid #45475a;
            border-radius: 8px;
            background-color: #313244;
            color: #cdd6f4;
        }

        .btn-primary {
            background-color: #89b4fa;
            color: #1e1e2e;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            border-radius: 15px;
            transition: background-color 0.3s ease;
            display: block;
            width: 100%;
            text-align: center;
            margin-top: 1rem;
        }

        .btn-primary:hover {
            background-color: #74c7ec;
        }

        .validation-summary-errors {
            color: #f38ba8;
            /* Catppuccin red */
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .field-validation-error {
            color: #f38ba8;
            /* Catppuccin red */
            font-weight: 500;
        }

        .success-message {
            color: #A6E3A1;
            /* Catppuccin green */
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .confirmation-message {
            color: #A6E3A1;
            /* Catppuccin green */
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .back-to-index {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

        .back-to-index button {
            background-color: #89b4fa;
            color: #1e1e2e;
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            border-radius: 15px;
            transition: background-color 0.3s ease;
        }

        .back-to-index button:hover {
            background-color: #74c7ec;
        }

        h2 {
            color: #cba6f7;
            border-bottom: 2px solid #45475a;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
<div class="form-container">
    <h2>Add a Discussion</h2>
    <form asp-action="AddDiscussion" method="post">
        <div class="form-group">
            <label for="moduleId">Module ID:</label>
            <input type="number" id="moduleId" name="moduleId" required/>
        </div>
        <div class="form-group">
            <label for="courseId">Course ID:</label>
            <input type="number" id="courseId" name="courseId" required/>
        </div>
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required/>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <button type="submit" class="btn-primary">Create Discussion</button>
    </form>

    <div class="back-to-index">
        <a asp-action="InstructorProfile" asp-controller="Account">
            <button>Go back</button>
        </a>
    </div>

    <div class="back-to-index">
        <a asp-action="Index" asp-controller="DiscussionForums">
            <button>See all Forums</button>
        </a>
    </div>

    @if (ViewBag.ConfirmationMessage != null)
    {
        <div class="confirmation-message">
            <p>@ViewBag.ConfirmationMessage</p>
        </div>
    }
</div>
</body>
</html>