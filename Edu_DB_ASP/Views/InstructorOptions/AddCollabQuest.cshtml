@model CollaborativeQuestViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Collaborative Quest";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #11111B;
        /* base */
        color: #D9E0EE;
        /* text */
    }

    .profile-container {
        display: flex;
        align-items: center;
        padding: 2rem;
        background: #181825;
        /* mantle */
        border-bottom: 1px solid #313244;
        /* surface0 */
        position: relative;
        border-radius: 15px;
        margin: 2rem;
    }

    .profile-pic-form {
        position: relative;
        width: 100px;
        height: 100px;
        margin-right: 1.5rem;
        border-radius: 50%;
        overflow: hidden;
    }

    .profile-image {
        position: relative;
        width: 100%;
        height: 100%;
        background: #313244;
        /* surface0 */
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .profile-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 50%;
    }

    /* Hidden label appears on hover */
    .profile-upload-label {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.5);
        color: #D9E0EE;
        font-size: 0.9rem;
        font-weight: 500;
        justify-content: center;
        align-items: center;
        text-align: center;
        border-radius: 50%;
        opacity: 0;
        transition: opacity 0.3s;
        cursor: pointer;
        display: flex;
    }

    .profile-image:hover .profile-upload-label {
        opacity: 1;
    }

    .profile-upload-label:hover {
        background: rgba(0,0,0,0.6);
    }

    .profile-upload-label input[type="file"] {
        display: none;
    }

    .profile-info {
        flex: 1;
    }

    .profile-info h1 {
        margin: 0;
        font-size: 1.5rem;
        color: #D9E0EE;
        /* text */
    }

    .profile-info p {
        margin: 0.5rem 0 0;
        color: #BAC2DE;
        /* subtext1 */
    }

    .section-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    h2 {
        color: #cba6f7;
        border-bottom: 2px solid #45475a;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background: #181825;
        border-radius: 15px;
        overflow: hidden;
    }

    table thead {
        background: #313244;
    }

    table thead th {
        text-align: left;
        padding: 1rem;
        color: #cdd6f4;
        font-weight: 600;
        border-bottom: 1px solid #45475a;
    }

    table tbody tr {
        border-bottom: 1px solid #313244;
    }

    table tbody tr:hover {
        background: #1e1e2e;
    }

    table tbody td {
        padding: 1rem;
        color: #a6adc8;
    }

    .tag {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-right: 0.5rem;
    }

    .tag.active {
        background: #A6E3A1;
        /* green */
        color: #1E1E2E;
        /* base */
    }

    .tag.archived {
        background: #F8BD96;
        /* peach */
        color: #1E1E2E;
        /* base */
    }

    .table-section {
        margin-bottom: 3rem;
    }

    .back-to-index {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }

    .back-to-index button,
    .btn-primary {
        background-color: #89b4fa;
        color: #1e1e2e;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 15px;
        transition: background-color 0.3s ease;
    }

    .back-to-index button:hover,
    .btn-primary:hover {
        background-color: #74c7ec;
    }

    .btn-primary {
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

    .form-container {
        background-color: #181825;
        /* mantle */
        border-radius: 25px;
        /* Squircle shape */
        padding: 2rem;
        width: 50%;
        /* Adjust width as needed */
        margin: 2rem auto;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: #cba6f7;
        /* lavender */
        font-weight: 500;
    }

    input[type="text"],
    input[type="number"],
    input[type="datetime-local"] {
        width: calc(100% - 1rem);
        /* Adjust width for padding */
        padding: 0.5rem;
        border: 1px solid #45475a;
        /* surface 1 */
        border-radius: 8px;
        background-color: #313244;
        /* surface 0 */
        color: #cdd6f4;
        /* text */
    }
</style>

<div class="form-container">
    <h2>Add Collaborative Quest</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="AddCollabQuest" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input type="text" id="Title" name="Title" required />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" id="Description" name="Description" required />
        </div>
        <div class="form-group">
            <label for="DifficultyLevel">Difficulty Level</label>
            <input type="text" id="DifficultyLevel" name="DifficultyLevel" required />
        </div>
        <div class="form-group">
            <label for="Criteria">Criteria</label>
            <input type="text" id="Criteria" name="Criteria" required />
        </div>
        <div class="form-group">
            <label for="MaxParticipants">Max Number of Participants</label>
            <input type="number" id="MaxParticipants" name="MaxParticipants" required />
        </div>
        <div class="form-group">
            <label for="Deadline">Deadline</label>
            <input type="datetime-local" id="Deadline" name="Deadline" required />
        </div>
        <button type="submit" class="btn-primary">Add Quest</button>
    </form>

    <div class="back-to-index">
        <a asp-action="DeadlineUpdate" asp-controller="InstructorOptions">
            <button>Module Manager</button>
        </a>
    </div>
</div>