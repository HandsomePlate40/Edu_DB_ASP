@model IEnumerable<Edu_DB_ASP.Models.Notification>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notifications</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #11111B; /* base */
            color: #D9E0EE; /* text */
        }

        .section-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        h2 {
            color: #cba6f7;
            border-bottom: 2px solid #45475a;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #181825;
            border-radius: 15px;
            overflow: hidden;
        }

        table thead {
            background: #313244;
        }

        table thead th {
            text-align: left;
            padding: 1rem;
            color: #cdd6f4;
            font-weight: 600;
            border-bottom: 1px solid #45475a;
        }

        table tbody tr {
            border-bottom: 1px solid #313244;
        }

        table tbody tr:hover {
            background: #1e1e2e;
        }

        table tbody td {
            padding: 1rem;
            color: #a6adc8;
        }

        .mark-read-button {
            background-color: #cba6f7;
            color: #11111B;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
        }

        .mark-read-button:disabled {
            background-color: #45475a;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
<div class="section-container">
    <h2>Notifications</h2>
    <table>
        <thead>
        <tr>
            <th>Message</th>
            <th>Timestamp</th>
            <th>Urgency Level</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@notification.MessageBody</td>
                <td>@notification.Timestamp</td>
                <td>@notification.UrgencyLevel</td>
                <td>
                    <form method="post" action="@Url.Action("MarkAsRead", "Notifications")">
                        <input type="hidden" name="NotificationId" value="@notification.NotificationId" />
                        <button type="submit" class="mark-read-button" @(notification.ReadStatus == true ? "disabled" : "")>
                            @(notification.ReadStatus == true ? "Read" : "Mark as read")
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>