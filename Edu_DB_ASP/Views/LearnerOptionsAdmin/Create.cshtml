@model Edu_DB_ASP.Models.Learner

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">CREATE LEARNER</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control form-input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control form-input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label"></label>
                <input asp-for="Gender" class="form-control form-input" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryOfOrigin" class="form-label"></label>
                <input asp-for="CountryOfOrigin" class="form-control form-input" />
                <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CulturalBackground" class="form-label"></label>
                <input asp-for="CulturalBackground" class="form-control form-input" />
                <span asp-validation-for="CulturalBackground" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalityTraits" class="form-label"></label>
                <input asp-for="PersonalityTraits" class="form-control form-input" />
                <span asp-validation-for="PersonalityTraits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmotionalProfile" class="form-label"></label>
                <input asp-for="EmotionalProfile" class="form-control form-input" />
                <span asp-validation-for="EmotionalProfile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalHealth" class="form-label"></label>
                <input asp-for="PhysicalHealth" class="form-control form-input" />
                <span asp-validation-for="PhysicalHealth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MentalHealth" class="form-label"></label>
                <input asp-for="MentalHealth" class="form-control form-input" />
                <span asp-validation-for="MentalHealth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperienceLevel" class="form-label"></label>
                <input asp-for="ExperienceLevel" class="form-control form-input" />
                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type='email' class='form-control form-input' />
                <span asp-validation-for='Email' class='text-danger'></span>
            </div>

            <!-- Submit Button -->
            <div class='text-center'>
                <input type='submit' value='Create' class='btn btn-primary btn-lg' />
            </div>

        </form>
    </div>

    <div style='margin-top: 20px; text-align: center;'>
        <!-- Changed to a button style -->
        <a href="@Url.Action("Index")" class='btn btn-secondary btn-lg'>Back to List</a>
    </div>

</div>

<style>
    .register-form {
        max-width: 310px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
        padding-right: 35px; /* adds extra padding to the right for a bigger look */
    }

    /* Center the heading */
    h2.text-center {
        text-align: center;
        font-size: 1.8em;
        margin-bottom: -22px;
        color: #cdd6f4;
    }

    /* Label Styling */
    .form-label {
        display: block;
        font-size: 1.2rem;
        margin-left: 7px;
        font-weight: 500;
        color: #e0e0e0;
        margin-bottom: 4px; /* to adjust the space between label and input */
    }

    /* Input Groups */
    .form-group {
        margin-bottom: 5px;
    }

    /* Input Styling */
    .form-control.form-input {
        width: 100%;
        padding: 5px;
        margin-left: 5px;
        border: 1px solid #4c566a; /* Border color */
        border-radius: 5px;
        background-color: #3b4252;
        color: #cdd6f4; /* text color */
        font-size: 1em;
    }

        .form-control.form-input:focus {
            border-color: #88c0d0;
            outline: none;
            box-shadow: 0 0 5px rgba(136, 192, 208, 0.5);
        }

    /* Validation Error Styling */
    .text-danger {
        color: #f5c2e7;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: 100%;
        padding: 10px;
        margin-left: 10px;
        background-color: #88c0d0;
        color: #2e3440;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-lg:hover {
            background-color: #5e81ac;
        }
</style>
