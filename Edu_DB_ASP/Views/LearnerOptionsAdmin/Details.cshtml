@model Edu_DB_ASP.Models.Learner

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">LEARNER DETAILS</h2>

<div class="row">
    <div class="col-md-4">
        <div class="details-view register-form">
            <h1 style="text-align: center">Learner Information</h1>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.FirstName):</span>
                <span>@Html.DisplayFor(model => model.FirstName)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.LastName):</span>
                <span>@Html.DisplayFor(model => model.LastName)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.Gender):</span>
                <span>@Html.DisplayFor(model => model.Gender)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.CountryOfOrigin):</span>
                <span>@Html.DisplayFor(model => model.CountryOfOrigin)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.CulturalBackground):</span>
                <span>@Html.DisplayFor(model => model.CulturalBackground)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.PersonalityTraits):</span>
                <span>@Html.DisplayFor(model => model.PersonalityTraits)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.EmotionalProfile):</span>
                <span>@Html.DisplayFor(model => model.EmotionalProfile)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.PhysicalHealth):</span>
                <span>@Html.DisplayFor(model => model.PhysicalHealth)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.MentalHealth):</span>
                <span>@Html.DisplayFor(model => model.MentalHealth)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.ExperienceLevel):</span>
                <span>@Html.DisplayFor(model => model.ExperienceLevel)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.Email):</span>
                <span>@Html.DisplayFor(model => model.Email)</span>
            </div> <!-- End of form-group -->

            <!-- Buttons inside the squircle -->
            <div style='text-align: center; margin-top: 20px;'>
                <a asp-action="Edit" asp-route-id="@Model?.LearnerId" class='btn btn-primary btn-lg'>Edit</a> |
                <a asp-action="Index" class='btn btn-secondary btn-lg'>Back to List</a>
            </div> <!-- End of button container -->

        </div> <!-- End of details-view -->
    </div> <!-- End of col-md-4 -->
</div> <!-- End of row -->

<style>
    .register-form {
        max-width: 310px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
        padding-right: 35px; /* adds extra padding to the right for a bigger look */
    }

    /* Center the heading */
    h2.text-center {
        text-align: center;
        color: #cdd6f4;
    }

    /* Label Styling */
    .form-label {
        display: inline-block; /* Align labels and values inline */
        font-size: 1.2rem;
        margin-right: 10px; /* Space between label and value */
        font-weight: 500;
        color: #e0e0e0;
    }

    /* Input Groups */
    .form-group {
        margin-bottom: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: auto; /* Adjust width for buttons */
        padding: 10px 20px; /* More padding for a squircle effect */
        margin-top: 15px; /* Space above buttons */
        border-radius: 25px; /* Increased border-radius for squircle effect */
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s; /* Added transform for hover effect */
    }

    .btn-primary {
        background-color: #88c0d0; /* Primary button color */
        border-color: #88c0d0;
        color: #2e3440;
    }

    .btn-primary:hover {
        background-color: #5e81ac; /* Darker shade on hover */
        transform: scale(1.05); /* Slightly enlarge on hover */
    }

    .btn-secondary {
        background-color: #4c566a; /* Secondary button color */
        border-color: #4c566a;
        color: #cdd6f4;
    }

    .btn-secondary:hover {
        background-color: #3b4252; /* Darker shade on hover */
        transform: scale(1.05); /* Slightly enlarge on hover */
    }
</style>