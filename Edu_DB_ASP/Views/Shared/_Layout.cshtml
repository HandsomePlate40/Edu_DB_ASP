<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_DB_ASP</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/catppuccin-mocha.css" />
    <style>
        :root {
            --background-color: #11111b; /* Catppuccin Mocha background */
            --nav-background-color: #0c0c13; /* Darker navbar color */
        }

        body {
            background-color: #11111B;
            font-family: 'Roboto', sans-serif;
            transition: margin-left 0.5s; /* For animating content when sidenav opens */
            overflow-x: hidden; /* Prevent horizontal scrollbar */
        }

        /* Navbar Styling */
        .navbar {
            background-color: #11111B;
            padding: 0.5rem 1rem;
            width: 100%;
            display: flex; /* Use flexbox for horizontal alignment */
            align-items: center; /* Align items vertically */
            justify-content: space-between; /* Space out brand and button container */
            border-bottom-left-radius: 25px;
            border-bottom-right-radius: 25px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: var(--lavender);
            text-decoration: none;
            display: flex;
            align-items: center; /* Vertically center icon and text */
        }

        .navbar-brand i {
            margin-right: 0.5rem; /* Space between icon and text */
        }

        .nav-container {
            display: flex; /* Keep buttons horizontal on navbar */
            align-items: center;
            margin-right: 2rem; /* Adjust margin as needed */
        }

        .navbar-nav {
            display: flex; /* For horizontal alignment on navbar */
            list-style: none; /* Remove list markers */
            padding: 0;
            margin: 0; /* Remove default margin */
        }

        .navbar .nav-link {
            color: var(--text);
            font-weight: 500;
            border-radius: 24px;
            padding: 0.5rem 1.5rem;
            background-color: transparent;
            transition: background-color 0.3s, color 0.3s;
            margin: 0 0.25rem; /* Adjust margin for button spacing */
            text-decoration: none;
            display: flex; /* For icon and text alignment */
            align-items: center; /* Center vertically */
        }

        .navbar .nav-link:hover {
            background-color: var(--surface0);
            color: var(--lavender);
        }

        .navbar i {
            margin-right: 0.5rem; /* Space between icon and text */
        }

        /* Side Navigation (Sidenav) Styling */
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 2;
            top: 0;
            left: 0;
            background-color: #11111B;
            overflow-x: hidden;
            transition: 0.5s; /* Sidenav open/close transition */
            padding-top: 60px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 36px;
            color: var(--text);
            text-decoration: none;
            z-index: 3;
        }

        .sidenav .navbar-nav {
            width: 100%;
            flex-direction: column;
            align-items: flex-start;
        }

        .sidenav .nav-link {
            padding: 0.5rem 1.5rem;
            text-decoration: none;
            font-size: 18px;
            color: var(--text);
            display: block;
            transition: background-color 0.3s, color 0.3s;
            border-radius: 24px;
            width: 90%;
        }

        .sidenav .nav-item {
            width: 100%;
            text-align: left;
            margin-left: 1rem;
        }

        .sidenav a:hover {
            background-color: var(--surface0);
            color: var(--lavender);
        }

        /* Hamburger Menu Button */
        .openbtn {
            font-size: 20px;
            cursor: pointer;
            background-color: transparent; /* Transparent background */
            color: var(--text);
            padding: 10px 15px;
            border: none;
            border-radius: 8px;
            z-index: 3;
        }

        .openbtn:hover {
            background-color: var(--surface0); /* Background on hover */
        }

        /* Main Content Styling */
        .main-content {
            padding: 1rem;
            transition: margin-left 0.5s; /* Animate content shift */
            z-index: 1;
        }

        /* Body styling when menu is open */
        body.sidenav-open .main-content {
            margin-left: 250px; /* Shift content when sidenav is open */
        }

        body.sidenav-open {
            margin-left: 250px; /* Push content to the right when sidenav is open */
        }

        footer {
            background-color: #11111B;
            color: var(--text);
            padding: 1rem;
            text-align: center;
        }

        footer a {
            color: var(--sky);
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .brand-openbtn-container {
            display: flex; /* Align brand and openbtn vertically */
            align-items: center; /* Center vertically */
            margin-left: 1rem; /* Adjust margin as needed */
        }
    </style>
</head>
<body>
<nav class="navbar">
    <div class="brand-openbtn-container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-graduation-cap"></i> 5 Bytes
        </a>
        <button class="openbtn" onclick="openNav()">☰</button>
    </div>

    <div class="nav-container">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LoginRoleSelection">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="GetStarted">
                    <i class="fas fa-rocket"></i> Get Started
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile">
                    <i class="fas fa-user"></i> Profile
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Side Navigation (Hidden by default) -->
<div class="sidenav" id="mySidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i> Home
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LoginRoleSelection">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="GetStarted">
                <i class="fas fa-rocket"></i> Get Started
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile">
                <i class="fas fa-user"></i> Profile
            </a>
        </li>
    </ul>
</div>

<div class="container main-content">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top">
    <div class="container">
        © 2024 - 5 Bytes - <a asp-area="" asp-controller="Account" asp-action="GetStarted">Join Us!</a>
    </div>
</footer>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
        document.body.classList.add("sidenav-open");
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
        document.body.classList.remove("sidenav-open");
    }
</script>
<!-- These scripts must be after your body content or in your JS file -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/553d74237a.js" crossorigin="anonymous"></script>
@RenderSection("Scripts", required: false)
</body>
</html>