<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_DB_ASP</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/catppuccin-mocha.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .navbar {
            background-color: #1e1e2e; /* Catppuccin Mocha base color */
        }

        .navbar-brand, .nav-link {
            color: #cdd6f4 !important; /* Catppuccin Mocha text color */
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #f5c2e7 !important; /* Catppuccin Mocha accent color */
            }

        .navbar-toggler {
            border-color: #cdd6f4; /* Catppuccin Mocha text color */
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23cdd6f4' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        .nav-item {
            margin-right: 10px;
        }

        .nav-link {
            border-radius: 20px;
            padding: 10px 20px;
            background-color: #3b4252; /* Catppuccin Mocha secondary color */
            transition: background-color 0.3s;
        }

            .nav-link:hover {
                background-color: #4c566a; /* Catppuccin Mocha hover color */
            }

        .navbar-nav {
            display: flex;
            flex-direction: row;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Edu_DB_ASP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="GetStarted">Get Started</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - 5 Bytes - <a asp-area="" asp-controller="Home" asp-action="Account">Register</a>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
