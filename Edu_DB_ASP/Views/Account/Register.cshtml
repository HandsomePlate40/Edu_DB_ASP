@model RegisterViewModel

<form asp-action="Register" method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control">
            <option value="Learner">Learner</option>
            <option value="Instructor">Instructor</option>
        </select>
        <span asp-validation-for="Role"></span>
    </div>
    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender"></span>
    </div>
    <div>
        <label asp-for="CountryOfOrigin"></label>
        <input asp-for="CountryOfOrigin" class="form-control" />
        <span asp-validation-for="CountryOfOrigin"></span>
    </div>
    <div id="qualifications-section" class="hidden">
        <label asp-for="Qualifications"></label>
        <input asp-for="Qualifications" class="form-control" />
        <span asp-validation-for="Qualifications"></span>
    </div>
    <button type="Submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <script>
        document.querySelector("[name='Role']").addEventListener("change", function () {
            const qualificationsSection = document.getElementById("qualifications-section");
            // Update display state based on Role value
            if (this.value === "Instructor" || this.value === "Learner") {
                    qualificationsSection.classList.remove("hidden");
                    } else {
                        qualificationsSection.classList.add("hidden");
                    }
                });

                // Initialize the visibility based on the current Role value on page load
                window.addEventListener("DOMContentLoaded", function () {
                    const qualificationsSection = document.getElementById("qualifications-section");
                    const roleSelect = document.querySelector("[name='Role']");
                    if (roleSelect.value === "Instructor" || roleSelect.value === "Learner") {
                        qualificationsSection.classList.remove("hidden");
                    } else {
                        qualificationsSection.classList.add("hidden");
                    }
                });
    </script>
}
