@{
    ViewData["Title"] = "Get Started";
    Layout = "_Layout";
}

<style>
    :root {
        --button-background-color: var(--surface0); /* Background color */
        --button-text-color: var(--text); /* Text color */
        --button-hover-background-color: var(--lavender); /* Background color on hover */
        --button-hover-text-color: var(--nav-background-color); /* Text color on hover */
    }

    .btn-primary {
        background-color: var(--button-background-color);
        color: var(--button-text-color);
        border: none;
        border-radius: 24px; /* Consistent with navbar buttons */
        padding: 0.5rem 1.5rem;
        text-decoration: none;
        display: inline-flex; /* Align icon and text */
        align-items: center; /* Vertically center */
        justify-content: center; /* Horizontally center */
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s; /* Smooth transition */
        margin: 0.5rem;
        width: 200px; /* Set a fixed width for consistency */
    }

    .btn-primary:hover {
        background-color: var(--button-hover-background-color);
        color: var(--button-hover-text-color);
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 3rem;
    }
</style>

<div class="container">
    <h1 style="text-align: center">How will you be joining us?</h1>
    <div class="button-container">
        <a class="btn-primary" href="@Url.Action("RegisterLearner", "Account")">
            Learner
        </a>
        <a class="btn-primary" href="@Url.Action("RegisterInstructor", "Account")">
            Instructor
        </a>
    </div>
    <div class="button-container">
        <a class="btn-primary" href="@Url.Action("RegisterAdmin", "Account")">
            Admin
        </a>
    </div>
</div>