@{
    ViewData["Title"] = "Choose Your Role";
    Layout = "_Layout";
}

<style>
    :root {
        --button-background-color: #313244; /* surface0 */
        --button-text-color: #D9E0EE; /* text */
        --button-hover-background-color: #B4BEFE; /* lavender */
        --button-hover-text-color: #11111B; /* base */
    }

    .btn-primary {
        background-color: var(--button-background-color);
        color: var(--button-text-color);
        border: none;
        border-radius: 24px; /* Consistent with navbar buttons */
        padding: 0.5rem 1.5rem;
        text-decoration: none;
        display: inline-flex; /* Align icon and text */
        align-items: center; /* Vertically center */
        justify-content: center; /* Horizontally center */
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s; /* Smooth transition */
        margin: 0.5rem;
        width: 200px; /* Set a fixed width for consistency */
    }

    .btn-primary:hover {
        background-color: var(--button-hover-background-color);
        color: var(--button-hover-text-color);
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 3rem;
    }
</style>

<div class="container">
    <h1 style="text-align: center">Who are you logging in as?</h1>
    <div class="button-container">
        <button class="btn-primary" onclick="location.href='@Url.Action("LearnerLogin", "Account")'">
            <span class="text">Learner</span>
        </button>
        <button class="btn-primary" onclick="location.href='@Url.Action("InstructorLogin", "Account")'">
            <span class="text">Instructor</span>
        </button>
    </div>
    <br />
    <div class="admin-container">
        <div class="button-container">
            <button class="btn-primary" onclick="location.href='@Url.Action("AdminLogin", "Account")'">
                <span class="text">Admin</span>
            </button>
        </div>
    </div>
</div>