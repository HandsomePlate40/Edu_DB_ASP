@model RegisterViewModelAdmin

<h2 class="text-center">REGISTERATION</h2>

<form asp-action="RegisterAdmin" method="post" class="register-form">
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control form-input" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control form-input" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control form-input" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control form-input" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="form-error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

</form>



<style>
    /* Center the form on the page */
    .register-form {
        max-width: 400px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440; /* background color obviously */
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
        padding-right: 35px; /* to add extra padding to the right for a bigger look */
    }

    /* Center the heading */
    h2.text-center {
        text-align: center;
        font-size: 1.8em;
        margin-bottom: 20px;
        color: #cdd6f4;
    }

    /* Label Styling */
    .form-label {
        display: block;
        font-size: 1.2rem;
        margin-left: 7px;
        font-weight: 500;
        color: #e0e0e0; 
        margin-bottom: 4px; /* to add space between label and input */
    }

    /* Input Groups */
        .form-group {
            margin-bottom: 15px;
        }

    /* Input Styling */
    .form-control.form-input {
        width: 100%;
        padding: 5px;
        margin-left: 5px;
        border: 1px solid #4c566a; /* the border color */
        border-radius: 5px;
        background-color: #3b4252; 
        color: #cdd6f4; /* text color */
        font-size: 1em;
    }

        .form-control.form-input:focus {
            border-color: #88c0d0; 
            outline: none;
            box-shadow: 0 0 5px #89B4FAFF;
        }

    /* Validation Error Styling */
    .text-danger {
        color: #f5c2e7; 
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: 100%;
        padding: 10px;
        margin-left: 10px;
        background-color: #89B4FAFF; 
        color: #2e3440;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-lg:hover {
            background-color: #267aff; 
        }

    {}
</style>