@model IEnumerable<Module>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modules</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #11111B; /* base */
            color: #D9E0EE; /* text */
        }
        .section-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        h2 {
            color: #cba6f7;
            border-bottom: 2px solid #45475a;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: #181825;
            border-radius: 15px;
            overflow: hidden;
        }
        table thead {
            background: #313244;
        }
        table thead th {
            text-align: left;
            padding: 1rem;
            color: #cdd6f4;
            font-weight: 600;
        }
        table tbody td {
            padding: 1rem;
            color: #D9E0EE;
        }
    </style>
</head>
<body>
    <div class="section-container">
        <h2>Modules</h2>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content Type</th>
                    <th>Difficulty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var module in Model)
                {
                    <tr>
                        <td>@module.Title</td>
                        <td>@module.ContentType</td>
                        <td>@module.ModuleDifficulty</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>