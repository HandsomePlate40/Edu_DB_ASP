@model IEnumerable<Edu_DB_ASP.Models.Module>

@{
    ViewData["Title"] = "Modules";
}

<div class="container">
    <h1 class="page-title">Modules</h1>

    <div class="table-controls">
        <a asp-action="Create" class="btn btn-primary">Create New Module</a>
    </div>

    <table class="table">
        <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleDifficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th class="actions-column">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                <td>
                    <a href="@item.ContentUrl" target="_blank" class="content-link">
                        @if (item.ContentUrl.Length > 20)
                        {
                            @item.ContentUrl.Substring(0, 20)
                        }
                        else
                        {
                            @item.ContentUrl
                        }
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleDifficulty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td class="actions-cell">
                    <a asp-action="Edit" asp-route-id="@item.ModuleId" class="btn btn-secondary btn-sm">Edit</a>
                    
                    <a asp-action="Delete" asp-route-id="@item.ModuleId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #11111B;
        color: #D9E0EE;
    }

    .container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 1rem;
        background: #181825;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    .page-title {
        color: #cba6f7;
        margin-bottom: 2rem;
        text-align: center;
    }

    .table-controls {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 1rem;
    }

    .btn {
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

    .btn-primary {
        background-color: #89b4fa;
        color: #1e1e2e;
    }

    .btn-primary:hover {
        background-color: #74c7ec;
    }

    .btn-secondary {
        background-color: #45475a;
        color: #D9E0EE;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

    .btn-secondary:hover {
        background-color: #585b70;
    }

    .btn-danger {
        background-color: #F38BA8;
        color: #1E1E2E;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

    .btn-danger:hover {
        background-color: #dc7791;
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.8rem;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 2rem;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid #313244;
    }

    .table-header-row {
        background-color: #313244;
    }

    th {
        text-align: left;
        padding: 0.75rem;
        color: #cba6f7;
        border-bottom: 2px solid #45475a;
    }

    td {
        padding: 0.75rem;
        border-bottom: 1px solid #313244;
    }

    /* Remove the right border from the last th and td in each row */
    th:last-child,
    td:last-child {
        border-right: none;
    }

    tr:hover {
        background-color: #1e1e2e;
    }

    .actions-column {
        width: 150px;
        text-align: center;
    }

    .actions-cell {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .content-link {
        color: #89b4fa;
        text-decoration: none;
    }

    .content-link:hover {
        text-decoration: underline;
    }
</style>