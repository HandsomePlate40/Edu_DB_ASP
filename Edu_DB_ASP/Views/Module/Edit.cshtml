@model Edu_DB_ASP.Models.Module

@{
    ViewData["Title"] = "Edit Module";
}

<div class="container">
    <h1 class="page-title">Edit Module</h1>

    <div class="edit-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModuleId" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContentType" class="control-label"></label>
                <input asp-for="ContentType" class="form-control" />
                <span asp-validation-for="ContentType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContentUrl" class="control-label"></label>
                <input asp-for="ContentUrl" class="form-control" />
                <span asp-validation-for="ContentUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModuleDifficulty" class="control-label"></label>
                <input asp-for="ModuleDifficulty" class="form-control" />
                <span asp-validation-for="ModuleDifficulty" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group form-buttons">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <button type="button" class="btn btn-secondary add-activity-btn" data-toggle="modal" data-target="#addActivityModal">
        Add New Activity
    </button>
</div>

<div class="modal fade" id="addActivityModal" tabindex="-1" role="dialog" aria-labelledby="addActivityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addActivityModalLabel">Add New Activity</h5>
            </div>
            <div class="modal-body">
                <form asp-action="AddActivity">
                    <input type="hidden" asp-for="ModuleId" />
                    <div class="form-group">
                        <label for="activityType">Activity Type</label>
                        <input type="text" class="form-control" id="activityType" name="activityType" required />
                    </div>
                    <div class="form-group">
                        <label for="instructionDetails">Instruction Details</label>
                        <textarea class="form-control" id="instructionDetails" name="instructionDetails" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="maxPoints">Max Points</label>
                        <input type="number" class="form-control" id="maxPoints" name="maxPoints" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Activity</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #11111B;
        color: #D9E0EE;
    }

    .container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1rem;
        background: #181825;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    }

    .page-title {
        color: #cba6f7;
        margin-bottom: 2rem;
        text-align: center;
    }

    .edit-form {
        margin-bottom: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .control-label {
        color: #BAC2DE;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        background-color: #313244;
        border: 1px solid #45475a;
        color: #D9E0EE;
        padding: 0.5rem;
        border-radius: 8px;
        width: 100%;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #89b4fa;
        box-shadow: 0 0 0 2px #89b4fa40;
    }

    .text-danger {
        color: #F38BA8;
        font-size: 0.9rem;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

    .btn-primary {
        background-color: #89b4fa;
        color: #1e1e2e;
    }

    .btn-primary:hover {
        background-color: #74c7ec;
    }

    .btn-secondary {
        background-color: #45475a;
        color: #D9E0EE;
    }

    .btn-secondary:hover {
        background-color: #585b70;
    }

    .alert {
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
        border-radius: 8px;
    }

    .alert-success {
        background-color: #A6E3A1;
        color: #1E1E2E;
    }

    .alert-danger {
        background-color: #F38BA8;
        color: #1E1E2E;
    }

    .add-activity-btn {
        margin-top: 1rem;
        width: auto;
    }

    .modal-content {
        background-color: #313244;
        border: none;
        border-radius: 15px;
    }

    .modal-header {
        border-bottom: 1px solid #45475a;
        padding: 1rem;
    }

    .modal-title {
        color: #cba6f7;
    }

    .modal-body {
        padding: 1rem;
    }

    .close {
        color: #D9E0EE;
        opacity: 0.75;
        font-size: 1.5rem;
    }

    .close:hover {
        opacity: 1;
    }
</style>