@model Edu_DB_ASP.Models.PersonalizationProfile

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-center">DELETE PERSONALIZATION PROFILE</h2>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-4">
        <div class="delete-confirmation register-form">
            <h1 style="text-align: center; margin-top: 10px">Personalization Profile Details</h1>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.PersonalityType):</span>
                <span>@Html.DisplayFor(model => model.PersonalityType)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.EmotionalState):</span>
                <span>@Html.DisplayFor(model => model.EmotionalState)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.AccessibilityPreferences):</span>
                <span>@Html.DisplayFor(model => model.AccessibilityPreferences)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.PreferredContentTypes):</span>
                <span>@Html.DisplayFor(model => model.PreferredContentTypes)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.Learner.LearnerId):</span>
                <span>@Html.DisplayFor(model => model.Learner.LearnerId)</span>
            </div>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" style='text-align: center;'>
                <input type="hidden" asp-for="CreationOrder" />
                <input type="hidden" asp-for="LearnerId" />

                <!-- Delete Button -->
                <input type='submit' value='Delete' class='btn btn-danger btn-lg' /> |
                <!-- Back to List Link -->
                <a asp-action='Index' class='btn btn-secondary btn-lg'>Back to List</a>
            </form>

        </div> <!-- End of delete-confirmation -->
    </div> <!-- End of col-md-4 -->
</div> <!-- End of row -->

<style>
    .register-form {
        max-width: 310px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
    }

    /* Center the heading */
    h2.text-center, h3.text-center {
        text-align: center;
        color: #cdd6f4;
    }

    /* Label Styling */
    .form-label {
        display: inline-block; /* Align labels and values inline */
        font-size: 1.2rem;
        margin-right: 10px; /* Space between label and value */
        font-weight: 500;
        color: #e0e0e0;
    }

    /* Input Groups */
    .form-group {
        margin-bottom: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: auto; /* Adjust width for buttons */
        padding: 10px;
        margin-top: 15px; /* Space above buttons */
        border-radius: 5px;
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-danger {
        background-color: #bf616a; /* Danger button color */
        border-color: #bf616a;
        color: white; /* Text color for button */
    }

    .btn-danger:hover {
        background-color: #a05257; /* Darker shade on hover */
    }

    .btn-secondary {
        background-color: #88c0d0; /* Secondary button color */
        border-color: #88c0d0;
        color: #2e3440;
    }

    .btn-secondary:hover {
        background-color: #5e81ac; /* Darker shade on hover */
    }
</style>
