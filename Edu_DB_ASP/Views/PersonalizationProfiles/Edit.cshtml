@model Edu_DB_ASP.Models.PersonalizationProfile

@{
    ViewData["Title"] = "Edit Personalization Profile";
}

<h1>Edit Personalization Profile</h1>

<h4>Personalization Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-creationOrder="@Model.CreationOrder" asp-route-learnerId="@Model.LearnerId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreationOrder" />
            <input type="hidden" asp-for="LearnerId" />
            <div class="form-group">
                <label asp-for="PersonalityType" class="control-label"></label>
                <input asp-for="PersonalityType" class="form-control" />
                <span asp-validation-for="PersonalityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmotionalState" class="control-label"></label>
                <input asp-for="EmotionalState" class="form-control" />
                <span asp-validation-for="EmotionalState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessibilityPreferences" class="control-label"></label>
                <input asp-for="AccessibilityPreferences" class="form-control" />
                <span asp-validation-for="AccessibilityPreferences" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreferredContentTypes" class="control-label"></label>
                <input asp-for="PreferredContentTypes" class="form-control" />
                <span asp-validation-for="PreferredContentTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-to-index">
    <a asp-action="Index" class="btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}