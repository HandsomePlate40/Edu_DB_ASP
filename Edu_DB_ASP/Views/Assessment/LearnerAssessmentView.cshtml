@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learner Assessment View</title>
</head>
<body>

<header>
    <h1>Learner Assessment View</h1>
</header>

<main>
    <form method="post" action="@Url.Action("LearnerAssessmentView")">
        <label for="title">Filter by Assessment Title:</label>
        <input type="text" id="title" name="Title" placeholder="Enter assessment title..." />
        <button type="submit">Search</button>
        <button type="button" onclick="location.href='@Url.Action("LearnerAssessmentView")'">Reset</button> <!-- Reset button -->
        <button type="button" onclick="location.href='@Url.Action("TopView")'">Top</button> <!-- Top button -->
    </form>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
            <tr>
                <th>Assessment ID</th>
                <th>Assessment Name</th>
                <th>Score</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var assessmentList in Model)
            {
                <tr>
                    <td>@assessmentList.AssessmentId</td>
                    <td>@assessmentList.AssessmentName</td>
                    <td>@assessmentList.score</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No assessments found.</p> <!-- Message when no assessments are available -->
    }
</main>
</body>
</html>