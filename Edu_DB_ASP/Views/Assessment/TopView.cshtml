@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Assessments</title>
</head>
<body>

    <header>
        <h1>Top Assessments</h1>
    </header>

    <main>
        <button type="button" onclick="location.href='@Url.Action("InstructorAssessmentView")'">Back</button> <!-- Back button -->
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Assessment ID</th>
                        <th>Title</th>
                        <th>Max Score</th>
                        <th>Course</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fassessment in Model)
                    {
                        <tr>
                            <td>@fassessment.ID</td>
                            <td>@fassessment.Title</td>
                            <td>@fassessment.Max</td>
                            <td>@fassessment.Course</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No assessments found.</p> <!-- Message when no assessments are available -->
        }
    </main>

    <footer>
        <p>&copy; 2024 Your Learning Platform</p> <!-- Footer content -->
    </footer>

</body>
</html>

