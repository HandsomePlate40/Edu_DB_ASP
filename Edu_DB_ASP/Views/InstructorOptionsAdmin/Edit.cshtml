@model Edu_DB_ASP.Models.Instructor

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">EDIT INSTRUCTOR</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InstructorId" />

            <div class="form-group">
                <label asp-for="InstructorName" class="form-label"></label>
                <input asp-for="InstructorName" class="form-control form-input" />
                <span asp-validation-for="InstructorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type='email' class='form-control form-input' />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualifications" class="form-label"></label>
                <input asp-for="Qualifications" class="form-control form-input" />
                <span asp-validation-for="Qualifications" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div style='text-align: center; margin-top: 20px;'>
                <input type='submit' value='Save' class='btn btn-primary btn-lg' />
            </div>

        </form>

        <!-- Back to List Button -->
        <div style='margin-top: 20px; text-align: center;'>
            <a href="@Url.Action("Index")" class='btn btn-secondary btn-lg'>Back to List</a>
        </div>

    </div> <!-- End of col-md-4 -->
</div> <!-- End of row -->

<style>
    .register-form {
        max-width: 310px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
    }

    /* Center the heading */
    h2.text-center {
        text-align: center;
        font-size: 1.8em;
        color: #cdd6f4;
    }

    /* Label Styling */
    .form-label {
        display: block;
        font-size: 1.2rem;
        margin-left: -2px;
        font-weight: 500;
        color: #e0e0e0;
        margin-bottom: 4px; /* Space between label and input */
    }

    /* Input Groups */
    .form-group {
        margin-bottom: 5px;
    }

    /* Input Styling */
    .form-control.form-input {
        width: 100%;
        padding: 5px;
        border: 1px solid #4c566a; /* Border color */
        border-radius: 5px;
        margin-left: -5px;
        background-color: #3b4252;
        color: #cdd6f4; /* Text color */
        font-size: 1em;
    }

        .form-control.form-input:focus {
            border-color: #88c0d0;
            outline: none;
            box-shadow: 0 0 5px rgba(136, 192, 208, 0.5);
        }

    /* Validation Error Styling */
    .text-danger {
        color: #f5c2e7;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: 100%;
        padding: 10px;
        margin-left: 10px;
        background-color: #88c0d0;
        color: #2e3440;
        border: none;
        margin-left: -2px;
        border-radius: 5px;
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-lg:hover {
            background-color: #5e81ac;
        }

    .btn-secondary {
        background-color: #4c566a; /* Secondary button color */
        border-color: #4c566a;
        color: #cdd6f4;
    }

        .btn-secondary:hover {
            background-color: #3b4252; /* Darker shade on hover */
            transform: scale(1.05); /* Slightly enlarge on hover */
        }
</style>