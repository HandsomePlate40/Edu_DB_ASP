@model Edu_DB_ASP.Models.Instructor

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-center">INSTRUCTOR DETAILS</h2>

<div class="row">
    <div class="col-md-4">
        <div class="details-view register-form">
            <h2 style="text-align: center">Instructor Information</h2>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.InstructorName):</span>
                <span>@Html.DisplayFor(model => model.InstructorName)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.Email):</span>
                <span>@Html.DisplayFor(model => model.Email)</span>
            </div>
            <div class="form-group">
                <span class="form-label">@Html.DisplayNameFor(model => model.Qualifications):</span>
                <span>@Html.DisplayFor(model => model.Qualifications)</span>
            </div>

            <!-- Buttons inside the squircle -->
            <div style='text-align: center; margin-top: 20px;'>
                <a asp-action="Edit" asp-route-id="@Model?.InstructorId" class='btn btn-primary btn-lg'>Edit</a> |
                <a asp-action='Index' class='btn btn-secondary btn-lg'>Back to List</a>
            </div> <!-- End of button container -->

        </div> <!-- End of details-view -->
    </div> <!-- End of col-md-4 -->
</div> <!-- End of row -->

<style>
    .register-form {
        max-width: 310px;
        margin: 50px auto; /* to center the form horizontally */
        padding: 15px;
        background-color: #2e3440;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);
        font-family: 'Roboto', sans-serif;
    }

    /* Center the heading */
    h2.text-center {
        text-align: center;
        color: #cdd6f4;
    }

    h4 {
        color: #cdd6f4; /* Color for subheading */
    }

    /* Label Styling */
    .form-label {
        display: inline-block; /* Align labels and values inline */
        font-size: 1.2rem;
        margin-right: 10px; /* Space between label and value */
        font-weight: 500;
        color: #e0e0e0;
    }

    /* Input Groups */
    .form-group {
        margin-bottom: 5px;
    }

    /* Button Styling */
    .btn-lg {
        width: auto; /* Adjust width for buttons */
        padding: 10px;
        border-radius: 25px; /* Increased border-radius for squircle effect */
        font-size: 1em;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s; /* Added transform for hover effect */
    }

    .btn-primary {
      background-color: #88c0d0; /* Primary button color */
      border-color: #88c0d0;
      color: #2e3440;
    }

      .btn-primary:hover {
          background-color: #5e81ac; /* Darker shade on hover */
          transform: scale(1.05); /* Slightly enlarge on hover */
      }

      .btn-secondary {
          background-color: #4c566a; /* Secondary button color */
          border-color: #4c566a;
          color: #cdd6f4;
      }

      .btn-secondary:hover {
          background-color: #3b4252; /* Darker shade on hover */
          transform: scale(1.05); /* Slightly enlarge on hover */
      }
</style>

